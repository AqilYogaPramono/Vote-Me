<%- include('../../partials/headers/__headerCommitteeAndAdmin.ejs', { title: 'Kelola Kandidat' }) %>
<%- include('../../partials/nav-sides/__nav-sideCommite.ejs') %>

<div class="main-panel">
    <%- include('../../partials/messages/__messageCommitteeAndAdmin.ejs') %>
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="card-title mb-0">Data Kandidat</h4>
                    <div class="btn-actions">
                      <a href="/panitia/kandidat/buat" class="btn btn-primary btn-sm" data-loading>Tambah Kandidat</a>
                    </div>
                  </div>
                  <div class="table-responsive">
                    <table class="table table-hover table-striped table-stacked">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>No. Urut</th>
                          <th>Foto</th>
                          <th>Ketua Kandidat</th>
                          <th>Wakil Ketua</th>
                          <th style="width: 200px;" class="text-right">Aksi</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (Array.isArray(candidates) && candidates.length) { %>
                          <% for (var i = 0; i < candidates.length; i++) { var item = candidates[i]; %>
                            <tr>
                              <td data-label="No"><%= i + 1 %></td>
                              <td data-label="No. Urut"><%= item.candidate_number %></td>
                              <td data-label="Foto">
                                <% if (item.candidate_photo) { %>
                                  <img src="/images/candidates/<%= item.candidate_photo %>" alt="Foto Kandidat" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                                <% } else { %>
                                  <span class="text-muted">Tidak ada foto</span>
                                <% } %>
                              </td>
                              <td data-label="Ketua Kandidat"><%= item.chair_candidate_name %></td>
                              <td data-label="Wakil Ketua"><%= item.vice_chair_candidate_name %></td>
                              <td class="text-right" data-label="Aksi">
                                <div class="btn-actions">
                                  <a href="/panitia/kandidat/preview/<%= item.id %>" class="btn btn-sm btn-outline-success" data-loading>Detail Kandidat</a>
                                </div>
                              </td>
                            </tr>
                          <% } %>
                        <% } else { %>
                          <tr>
                            <td colspan="7" class="text-center text-muted py-4">Belum ada data kandidat. Klik "Tambah Kandidat" untuk menambahkan.</td>
                          </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Detail Kandidat -->
<div class="modal fade" id="modalDetailCandidate" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Detail Kandidat</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-4 text-center">
            <img id="modalCandidatePhoto" src="" alt="Foto Kandidat" class="img-fluid rounded mb-3" style="max-height: 200px; object-fit: cover;">
            <h6 class="text-primary">Nomor Urut: <span id="modalCandidateNumber"></span></h6>
          </div>
          <div class="col-md-8">
            <div class="row mb-3">
              <div class="col-md-6">
                <strong>Ketua Kandidat:</strong>
                <p id="modalChairName" class="mb-2"></p>
              </div>
              <div class="col-md-6">
                <strong>Wakil Ketua:</strong>
                <p id="modalViceName" class="mb-2"></p>
              </div>
            </div>
          </div>
        </div>
        
        <hr>
        
        <div class="row">
          <div class="col-12">
            <div class="mb-4">
              <h6 class="text-primary mb-2"><i class="fas fa-eye"></i> Visi</h6>
              <div id="modalVision" class="border p-3 rounded bg-light"></div>
            </div>
            
            <div class="mb-4">
              <h6 class="text-primary mb-2"><i class="fas fa-bullseye"></i> Misi</h6>
              <div id="modalMission" class="border p-3 rounded bg-light"></div>
            </div>
            
            <div class="mb-4">
              <h6 class="text-primary mb-2"><i class="fas fa-tasks"></i> Program Kerja</h6>
              <div id="modalWorkProgram" class="border p-3 rounded bg-light"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal Konfirmasi Hapus -->
<div class="modal fade modal-below-navbar" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Konfirmasi Hapus</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Apakah Anda yakin ingin menghapus data ini?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Batal</button>
        <button type="button" class="btn btn-danger" id="btnConfirmDelete">Hapus</button>
      </div>
    </div>
  </div>
</div>


<%- include('../../partials/scripts/__scriptCommitteeAndAdmin.ejs') %>

